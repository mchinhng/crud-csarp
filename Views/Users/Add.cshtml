@{
    ViewData["Title"] = "Add user";
}
@model UserInfo.Web.Models.AddUserViewModel

<h1>@ViewData["Title"]</h1>
<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <label class="form-label">Gender</label> </br>
            <label>
                <input type="radio" name="gender" value="male" required asp-for="Gender" checked>
                Male
            </label>

            <label>
                <input type="radio" name="gender" value="female" asp-for="Gender">
                Female
            </label>
            <label>
                <input type="radio" name="gender" value="other" asp-for="Gender">
                Other
            </label>
    </div>
    <div class="mt-3">
        <label class="form-label">DoB</label>
        <input type="date" class="form-control" asp-for="DoB" />
        <span asp-validation-for="DoB" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>